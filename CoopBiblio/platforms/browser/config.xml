<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.uqam.mgl7130.coopBiblio" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CoopBiblio</name>
    <description>
        Application de gestion d'emprunt de livre d'une biblioth√®que.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Dream Team 
    </author>
    <content src="index.html" />
    <icon src="res/icon.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackgroundColor" value="0xffee3823" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="true" />
    <preference name="permissions" value="none" />
</widget>
